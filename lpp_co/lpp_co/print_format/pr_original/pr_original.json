 "html": "<!-- Load Fonts -->\n{{ frappe.render_template(\"templates/jinja_lpp_fonts.html\") }}\n\n<!-- Get value from doctype -->\n{% set company = frappe.db.get_value(\n    \"Company\",\n    {\"name\": doc.company},\n    [\"company_logo\", \"custom_company_name_th\", \"tax_id\", \"custom_company_name_en\", \"custom_address_en\"],\n    as_dict=True) %}\n{% set owner = frappe.db.get_value(\n    \"User\",\n    {\"name\": doc.owner},\n    [\"full_name\"],\n    as_dict=True) %}\n{% set employee = frappe.db.get_value(\n    \"Employee\",\n    {\"user_id\": doc.owner},\n    [\"department\"],\n    as_dict=True) %}\n{% set cost_centers = set(frappe.db.get_all(\n    \"Material Request Item\",\n    {\"parenttype\": \"Material Request\", \"parentfield\": \"items\", \"parent\": doc.name},\n    pluck=\"cost_center\")) | reject(\"none\") | list %}\n    \n<div id=\"header-html\" class=\"hidden-pdf\">\n    <div class=\"row section-break\">\n        <div class=\"col-xs-2\">\n            <img class=\"logo\" src=\"{{ company.company_logo }}\" alt=\"Logo\">\n        </div>\n        <div class=\"col-xs-8\">\n            <strong class=\"title\">\n                {{ company.custom_company_name_en }}<br>\n                {{ company.custom_company_name_th }}\n            </strong>\n        </div>\n        <div class=\"col-xs-2 text-right\">\n            {{ _(\"Page {0}/{1}\").format('<span class=\"page\"></span>', '<span class=\"topage\"></span>') }}\n        </div>\n    </div>\n    <div class=\"row section-break\">\n        <div class=\"col-xs-7\">\n            {{ company.custom_address_en or \"-\" }}<br>\n        </div>\n        <div class=\"col-xs-5 title title-purchase-request text-right\">\n            <strong>\n                \u0e43\u0e1a\u0e02\u0e2d\u0e0b\u0e37\u0e49\u0e2d<br>\n                Purchase Request\n            </strong>\n        </div>\n    </div>\n    <br>\n    <div class=\"row section-break\">\n        <div class=\"col-xs-6\">\n            <div class=\"row section-break\">\n                <div class=\"col-xs-3\">\n                    <strong>\u0e1c\u0e39\u0e49\u0e23\u0e49\u0e2d\u0e07\u0e02\u0e2d<br>Requester</strong>\n                </div>\n                <div class=\"col-xs-9\">\n                    {{ owner.full_name or \"-\" }}\n                </div>\n            </div>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-3\">\n                    <strong>\u0e41\u0e1c\u0e19\u0e01<br>Department</strong>\n                </div>\n                <div class=\"col-xs-9\">\n                    {% if employee.department %}\n                        {% set department = frappe.db.get_value(\n                            \"Department\",\n                            {\"name\": employee.department},\n                            [\"department_name\"],\n                            as_dict=True) %}\n                        {{ department.department_name or \"-\" }}\n                    {% endif %}\n                </div>\n            </div>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-3\">\n                    <strong>\u0e28\u0e39\u0e19\u0e22\u0e4c\u0e15\u0e49\u0e19\u0e17\u0e38\u0e19<br>Costcenter</strong>\n                </div>\n                <div class=\"col-xs-9\">\n                    {{ cost_centers and cost_centers | join(\", \") or \"-\" }}\n                </div>\n            </div>\n        </div>\n        <div class=\"col-xs-6\">\n            <div class=\"row section-break\">\n                <div class=\"col-xs-7\">\n                    <strong>\u0e40\u0e25\u0e02\u0e17\u0e35\u0e48\u0e40\u0e2d\u0e01\u0e2a\u0e32\u0e23 / Document No.</strong>\n                </div>\n                <div class=\"col-xs-5\">\n                    {{ doc.name or \"-\" }}\n                </div>\n            </div>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-7\">\n                    <strong>\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48\u0e40\u0e2d\u0e01\u0e2a\u0e32\u0e23 / Document Date</strong>\n                </div>\n                <div class=\"col-xs-5\">\n                    {{ doc.transaction_date and frappe.utils.getdate(doc.transaction_date).strftime(\"%d/%m/%Y\") or \"-\" }}\n                </div>\n            </div>\n            <br><br>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-7\">\n                    <strong>\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48\u0e15\u0e49\u0e2d\u0e07\u0e01\u0e32\u0e23\u0e02\u0e2d\u0e07 <br> Required Date</strong>\n                </div>\n                <div class=\"col-xs-5\">\n                    {{ doc.schedule_date and frappe.utils.getdate(doc.schedule_date).strftime(\"%d/%m/%Y\") or \"-\" }}\n                </div>\n            </div>\n        </div>\n    </div>\n</div>\n<table>\n    <thead>\n        <tr>\n            <th class=\"table-head text-center col-1\" style=\"border-bottom-width: 2px !important;border-left: 1px solid #000000;\"><strong>\u0e25\u0e33\u0e14\u0e31\u0e1a<br>No.</strong></th>\n            <th class=\"table-head col-2\" style=\"border-bottom-width: 2px !important;\"><strong>\u0e23\u0e2b\u0e31\u0e2a\u0e2a\u0e34\u0e19\u0e04\u0e49\u0e32<br>Item Code</strong></th>\n            <th class=\"table-head col-3\" style=\"border-bottom-width: 2px !important;\"><strong>\u0e0a\u0e37\u0e48\u0e2d\u0e23\u0e32\u0e22\u0e01\u0e32\u0e23<br>Item Name</strong></th>\n            <th class=\"table-head text-right col-4\" style=\"border-bottom-width: 2px !important;\"><strong>\u0e08\u0e33\u0e19\u0e27\u0e19<br>Quantity</strong></th>\n            <th class=\"table-head text-right col-5\" style=\"border-bottom-width: 2px !important;\"><strong>\u0e2b\u0e19\u0e48\u0e27\u0e22<br>Unit</strong></th>\n            <th class=\"table-head text-right col-6\" style=\"border-bottom-width: 2px !important;\"><strong>\u0e23\u0e32\u0e04\u0e32<br>Price</strong></th>\n            <th class=\"table-head text-right col-7\" style=\"border-bottom-width: 2px !important;border-right: 1px solid #000000;\"><strong>\u0e08\u0e33\u0e19\u0e27\u0e19\u0e40\u0e07\u0e34\u0e19<br>Amount</strong></th>\n        </tr>\n    </thead>\n    <tbody>\n        {% for item in doc.items %}\n            <tr>\n                <td class=\"text-center\">\n                    {{ item.idx }}\n                </td>\n                <td>\n                    {{ item.item_code or \"-\" }}\n                </td>\n                <td>\n                    {{ item.description or \"-\" }}\n                </td>\n                <td class=\"text-right\">\n                    {{ \"{:,.2f}\".format(item.qty) }}\n                </td>\n                <td class=\"text-right\">\n                    {{ item.uom or \"-\" }}\n                </td>\n                <td class=\"text-right\">\n                    {{ \"{:,.2f}\".format(item.rate) }}\n                </td>\n                <td class=\"text-right\">\n                    {{ \"{:,.2f}\".format(item.amount) }}\n                </td>\n            </tr>\n        {% endfor %}\n    </tbody>\n</table>\n<div id=\"footer-html\" class=\"visible-pdf\">\n    <p class=\"line-break\"></p>\n    <table class=\"page-break-inside\">\n        <tr>\n            <td class=\"col-foot-1\">\n                <strong>Remark</strong><br>{{ doc.terms or \"-\" }}\n            </td>\n            <td class=\"col-foot-2\">\n                <strong>\u0e22\u0e2d\u0e14\u0e23\u0e27\u0e21<br>Subtotal</strong>\n            </td>\n            <td class=\"col-foot-3\">\n                THB\n            </td>\n            <td class=\"col-foot-4 text-right\">\n                {{ \"{:,.2f}\".format(doc.items | sum(attribute=\"amount\")) }}\n            </td>\n        </tr>\n    </table>\n    <div class=\"row section-break\">\n        <div class=\"col-xs-4 text-center\">\n            <br><br><br>\n            <div style=\"border-top: 1px solid;\"></div>\n            <strong>\u0e1c\u0e39\u0e49\u0e23\u0e49\u0e2d\u0e07\u0e02\u0e2d / Requester</strong>\n        </div>\n        <div class=\"col-xs-4 text-center\">\n            <br><br><br>\n            <div style=\"border-top: 1px solid;\"></div>\n            <strong>\u0e2b\u0e31\u0e27\u0e2b\u0e19\u0e49\u0e32\u0e1d\u0e48\u0e32\u0e22 / Section Head</strong>\n        </div>\n        <div class=\"col-xs-4 text-center\">\n            <br><br><br>\n            <div style=\"border-top: 1px solid;\"></div>\n            <strong>\u0e1c\u0e39\u0e49\u0e2d\u0e19\u0e38\u0e21\u0e31\u0e15\u0e34 / Approver</strong>\n        </div>\n    </div>\n    <div class=\"row section-break\">\n        <div class=\"col-xs-4 text-center\">\n            <br><br>\n            <strong>\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48 / Date _____________________________</strong>\n        </div>\n        <div class=\"col-xs-4 text-center\">\n            <br><br>\n            <strong>\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48 / Date _____________________________</strong>\n        </div>\n        <div class=\"col-xs-4 text-center\">\n            <br><br>\n            <strong>\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48 / Date _____________________________</strong>\n        </div>\n    </div>\n    <div class=\"row\">\n        <div class=\"col-xs-12 text-right\">\n            <strong>QR-PUR-001 Rev.I</strong> Affective from 01/01/2025\n        </div>\n    </div>\n</div>",
