 "html": "<!-- Load Fonts -->\n{{ frappe.render_template(\"templates/jinja_lpp_fonts.html\") }}\n\n<!-- Get value from doctype -->\n{% set company = frappe.db.get_value(\n    \"Company\",\n    {\"name\": doc.company},\n    [\"company_logo\", \"custom_company_name_th\", \"tax_id\", \"custom_company_name_en\", \"custom_address_en\"],\n    as_dict=True) %}\n{% set supplier = frappe.db.get_value(\n    \"Supplier\",\n    {\"name\": doc.supplier},\n    [\"supplier_name\", \"tax_id\"],\n    as_dict=True) %}\n{% set supplier_address = frappe.db.get_value(\n    \"Address\",\n    {\"name\": (\"=\", doc.supplier_address)},\n    [\"address_line1\", \"address_line2\", \"city\", \"county\", \"state\", \"pincode\"],\n    as_dict=True) %}\n{% set payment_schedules = set(frappe.db.get_all(\n    \"Payment Schedule\",\n    {\"parenttype\": \"Purchase Order\", \"parentfield\": \"payment_schedule\", \"parent\": doc.name},\n    pluck=\"payment_term\")) | reject(\"none\") | list %}\n{% set contact = frappe.db.get_value(\n    \"Contact\",\n    {\"name\": doc.contact_person},\n    [\"full_name\", \"email_id\"],\n    as_dict=True) %}\n\n<div id=\"header-html\" class=\"hidden-pdf\">\n    <div class=\"row section-break\">\n        <div class=\"col-xs-2\">\n            <img class=\"logo\" src=\"{{ company.company_logo }}\" alt=\"Logo\">\n        </div>\n        <div class=\"col-xs-5\">\n            <strong class=\"title\">\n                {{ company.custom_company_name_en }}<br>\n                {{ company.custom_company_name_th }}\n            </strong>\n        </div>\n        <div class=\"col-xs-2 zero-padding-left\">\n            <img class=\"iso-logo\" src=\"/assets/lpp_co/images/SGS-ISO-9001-UKAS_TCL_HR.jpg\" alt=\"Logo\">\n        </div>\n        <div class=\"col-xs-2 zero-padding-left\">\n            <img class=\"iso-logo\" src=\"/assets/lpp_co/images/SGS-ISO-14001-UKAS_TCL_HR.jpg\" alt=\"Logo\">\n        </div>\n        <div class=\"col-xs-1 page-number\">\n            <span class=\"color-thin\">Page</span> {{ _(\"{0}/{1}\").format('<span class=\"page\"></span>', '<span class=\"topage\"></span>') }}\n        </div>\n    </div>\n    <div class=\"row section-break\">\n        <div class=\"col-xs-8\">\n            {{ company.custom_address_en or \"-\" }}<br>\n        </div>\n        <div class=\"col-xs-4 title title-purchase-order text-right\">\n            <strong>\u0e43\u0e1a\u0e2a\u0e31\u0e48\u0e07\u0e0b\u0e37\u0e49\u0e2d<br>Purchase Order</strong>\n        </div>\n    </div>\n    <div class=\"row section-break\">\n        <div class=\"col-xs-6\">\n            <div class=\"row section-break\">\n                <div class=\"col-xs-3\">\n                    <strong>\n                        \u0e1c\u0e39\u0e49\u0e08\u0e33\u0e2b\u0e19\u0e48\u0e32\u0e22<br>\n                        Supplier\n                    </strong>\n                </div>\n                <div class=\"col-xs-9\">\n                    {{ supplier.supplier_name or \"-\" }}\n                </div>\n            </div>\n            <br>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-3\">\n                    <strong>\n                        \u0e17\u0e35\u0e48\u0e2d\u0e22\u0e39\u0e48<br>\n                        Address\n                    </strong>\n                </div>\n                <div class=\"col-xs-9\">\n                    <p>\n                        {% if supplier_address %}\n                            {{ supplier_address.address_line1 or \"\" }}\n                            {{ supplier_address.address_line2 or \"\" }}\n                            {{ supplier_address.city or \"\" }}\n                            {{ supplier_address.county or \"\" }}\n                            {{ supplier_address.state or \"\" }}\n                            {{ supplier_address.pincode or \"\" }}\n                        {% else %}\n                            -\n                        {% endif %}\n                    </p>\n                </div>\n            </div>\n            <br>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-3\">\n                    <strong>\n                        \u0e15\u0e34\u0e14\u0e15\u0e48\u0e2d<br>\n                        Contact\n                    </strong>\n                </div>\n                <div class=\"col-xs-9\">\n                    {{ contact.full_name or \"-\" }}\n                    {% if contact.email_id %}\n                        | {{ contact.email_id }}\n                    {% endif %}\n                </div>\n            </div>\n        </div>\n        <div class=\"col-xs-6\">\n            <div class=\"row section-break\">\n                <div class=\"col-xs-7\">\n                    <span class=\"color-thin\">\u0e40\u0e25\u0e02\u0e17\u0e35\u0e48\u0e40\u0e2d\u0e01\u0e2a\u0e32\u0e23 / Document No</span>\n                </div>\n                <div class=\"col-xs-5\">\n                    {{ doc.name or \"-\" }}\n                </div>\n            </div>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-7\">\n                    <span class=\"color-thin\">\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48\u0e40\u0e2d\u0e01\u0e2a\u0e32\u0e23 / Document Date</span>\n                </div>\n                <div class=\"col-xs-5\">\n                    {{ doc.transaction_date and frappe.utils.getdate(doc.transaction_date).strftime(\"%d/%m/%Y\") or \"-\" }}\n                </div>\n            </div>\n            <br>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-7\">\n                    <strong>\n                        \u0e40\u0e07\u0e37\u0e48\u0e2d\u0e19\u0e44\u0e02\u0e40\u0e04\u0e23\u0e14\u0e34\u0e15<br>\n                        Credit Terms\n                    </strong>\n                </div>\n                <div class=\"col-xs-5\">\n                    {{ payment_schedules and payment_schedules | join(\", \") or \"-\" }}\n                </div>\n            </div>\n            <br>\n            <div class=\"row section-break\">\n                <div class=\"col-xs-7\">\n                    <strong>\n                        \u0e01\u0e33\u0e2b\u0e19\u0e14\u0e27\u0e31\u0e19\u0e2a\u0e48\u0e07<br>\n                        Delivery Date\n                    </strong>\n                </div>\n                <div class=\"col-xs-5\">\n                    {{ doc.schedule_date and frappe.utils.getdate(doc.schedule_date).strftime(\"%d/%m/%Y\") or \"-\" }}\n                </div>\n            </div>\n        </div>\n    </div>\n</div>\n<table>\n    <thead>\n        <tr>\n            <th class=\"table-head text-center col-1\" style=\"border-left: 1px solid #6D6E71;\"><strong>\u0e25\u0e33\u0e14\u0e31\u0e1a<br>No.</strong></th>\n            <th class=\"table-head col-2\"><strong>\u0e23\u0e2b\u0e31\u0e2a\u0e2a\u0e34\u0e19\u0e04\u0e49\u0e32<br>Item Code</strong></th>\n            <th class=\"table-head col-3\"><strong>\u0e0a\u0e37\u0e48\u0e2d\u0e23\u0e32\u0e22\u0e01\u0e32\u0e23<br>Item Name</strong></th>\n            <th class=\"table-head text-right col-4\"><strong>\u0e08\u0e33\u0e19\u0e27\u0e19<br>Quantity</strong></th>\n            <th class=\"table-head text-right col-5\"><strong>\u0e2b\u0e19\u0e48\u0e27\u0e22<br>Unit</strong></th>\n            <th class=\"table-head text-right col-6\"><strong>\u0e23\u0e32\u0e04\u0e32<br>Price</strong></th>\n            <th class=\"table-head text-right col-7\" style=\"border-right: 1px solid #6D6E71;\"><strong>\u0e08\u0e33\u0e19\u0e27\u0e19\u0e40\u0e07\u0e34\u0e19<br>Amount</strong></th>\n        </tr>\n    </thead>\n    <tbody>\n        {% for item in doc.items %}\n            <tr>\n                <td class=\"text-center\">\n                    {{ item.idx }}\n                </td>\n                <td>\n                    {{ item.item_code or \"-\" }}\n                </td>\n                <td>\n                    {{ item.description or \"-\" }}\n                </td>\n                <td class=\"text-right\">\n                    {{ \"{:,.2f}\".format(item.qty) }}\n                </td>\n                <td class=\"text-right\">\n                    {{ item.uom or \"-\" }}\n                </td>\n                <td class=\"text-right\">\n                    {{ \"{:,.2f}\".format(item.rate) }}\n                </td>\n                <td class=\"text-right\">\n                    {{ \"{:,.2f}\".format(item.amount) }}\n                </td>\n            </tr>\n        {% endfor %}\n    </tbody>\n</table>\n<div id=\"footer-html\" class=\"visible-pdf\">\n    <p class=\"line-break\"></p>\n    <table class=\"page-break-inside\">\n        <tr>\n            <td class=\"col-foot-1\" rowspan=\"3\" style=\"padding-top: 0px !important;\">\n                <span class=\"color-thin\">Remark</span><br>{{ doc.terms or \"-\" }}\n            </td>\n            <td class=\"col-foot-2\" style=\"padding-top: 0px !important;\">\n                <span>\u0e22\u0e2d\u0e14\u0e23\u0e27\u0e21<br>Subtotal</span>\n            </td>\n            <td class=\"col-foot-3\" style=\"padding-top: 0px !important;\">\n                {{ doc.currency }}\n            </td>\n            <td class=\"col-foot-4 text-right\" style=\"padding-top: 0px !important;\">\n                {{ \"{:,.2f}\".format(doc.total) }}\n            </td>\n        </tr>\n        <tr>\n            <td style=\"padding-top: 0px !important;\">\n                <span class=\"color-thin\">\u0e20\u0e32\u0e29\u0e35\u0e21\u0e39\u0e25\u0e04\u0e48\u0e32\u0e40\u0e1e\u0e34\u0e48\u0e21<br>VAT 7%</span>\n            </td>\n            <td style=\"padding-top: 0px !important;\">\n                <span class=\"color-thin\">{{ doc.currency }}</span>\n            </td>\n            <td class=\"text-right\" style=\"padding-top: 0px !important;\">\n                <span class=\"color-thin\">{{ \"{:,.2f}\".format(doc.total_taxes_and_charges) }}</span>\n            </td>\n        </tr>\n        <tr>\n            <td style=\"padding-top: 0px !important;\">\n                <strong>\u0e22\u0e2d\u0e14\u0e23\u0e27\u0e21\u0e17\u0e31\u0e49\u0e07\u0e2a\u0e34\u0e49\u0e19<br>Grand Total</strong>\n            </td>\n            <td style=\"padding-top: 0px !important;\">\n                <strong>{{ doc.currency }}</strong>\n            </td>\n            <td class=\"text-right\" style=\"padding-top: 0px !important;\">\n                <strong>{{ \"{:,.2f}\".format(doc.grand_total) }}</strong>\n            </td>\n        </tr>\n    </table>\n    <div class=\"row page-break-inside\">\n        <div class=\"col-xs-12\">\n            <p class=\"color-thin\">\u0e01\u0e23\u0e38\u0e13\u0e32\u0e15\u0e23\u0e27\u0e08\u0e2a\u0e2d\u0e1a\u0e04\u0e27\u0e32\u0e21\u0e16\u0e39\u0e01\u0e15\u0e49\u0e2d\u0e07\u0e02\u0e2d\u0e07\u0e43\u0e1a\u0e2a\u0e31\u0e48\u0e07\u0e0b\u0e37\u0e49\u0e2d\u0e41\u0e25\u0e30\u0e25\u0e07\u0e19\u0e32\u0e21\u0e23\u0e31\u0e1a\u0e17\u0e23\u0e32\u0e1a \u0e08\u0e32\u0e01\u0e19\u0e31\u0e49\u0e19\u0e42\u0e1b\u0e23\u0e14\u0e2a\u0e48\u0e07\u0e40\u0e2d\u0e01\u0e2a\u0e32\u0e23\u0e09\u0e1a\u0e31\u0e1a\u0e19\u0e35\u0e49\u0e01\u0e25\u0e31\u0e1a\u0e21\u0e32\u0e22\u0e31\u0e07\u0e1a\u0e23\u0e34\u0e29\u0e31\u0e17\u0e2f \u0e40\u0e1e\u0e37\u0e48\u0e2d\u0e22\u0e37\u0e19\u0e22\u0e31\u0e19\u0e01\u0e32\u0e23\u0e2a\u0e31\u0e48\u0e07\u0e0b\u0e37\u0e49\u0e2d</p>\n            <p class=\"color-thin\">Please review and confirm the accuracy of this purchase order by signing and returning to us to confirm the order.</p>\n        </div>\n    </div>\n    <div class=\"row section-break\">\n        <div class=\"col-xs-4 text-center\">\n            <br><br><br>\n            <div style=\"border-top: 1px solid;\"></div>\n            <strong>\u0e1c\u0e39\u0e49\u0e23\u0e31\u0e1a\u0e40\u0e2d\u0e01\u0e2a\u0e32\u0e23 / Recipient</strong>\n        </div>\n        <div class=\"col-xs-4 text-center\">\n            <br><br><br>\n            <div style=\"border-top: 1px solid;\"></div>\n            <strong>\u0e1c\u0e39\u0e49\u0e2a\u0e31\u0e48\u0e07\u0e0b\u0e37\u0e49\u0e2d / Purchaser</strong>\n        </div>\n        <div class=\"col-xs-4 text-center\">\n            <br><br><br>\n            <div style=\"border-top: 1px solid;\"></div>\n            <strong>\u0e1c\u0e39\u0e49\u0e2d\u0e19\u0e38\u0e21\u0e31\u0e15\u0e34 / Approver</strong>\n        </div>\n    </div>\n    <div class=\"row section-break\">\n        <div class=\"col-xs-4 text-center\">\n            <br><br>\n            <strong>\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48 / Date ___________________________</strong>\n        </div>\n        <div class=\"col-xs-4 text-center\">\n            <br><br>\n            <strong>\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48 / Date ___________________________</strong>\n        </div>\n        <div class=\"col-xs-4 text-center\">\n            <br><br>\n            <strong>\u0e27\u0e31\u0e19\u0e17\u0e35\u0e48 / Date ___________________________</strong>\n        </div>\n    </div>\n    <div class=\"row\">\n        <div class=\"col-xs-12 text-right\">\n            <strong>QR-PUR-002 Rev.N</strong> <span class=\"color-thin\">- Affective from 01/01/2025</span>\n        </div>\n    </div>\n</div>",
